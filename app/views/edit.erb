<h1>Edit This Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="name">Name: </label>
  <input type="text" name="name" placeholder="<%= @recipe.name%>">
  <label for="ingredients">Ingredients: </label>
  <input type="text" name="ingredients" placeholder="<%= @recipe.ingredients %>">
  <label for="time">Cook Time: </label>
  <input type="number" name="cook_time" placeholder="<%= @recipe.cook_time %>">
  <input type="submit" value="Submit Changes">
</form>
